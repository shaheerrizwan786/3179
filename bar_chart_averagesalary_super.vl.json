{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "State-by-State Salary vs Superannuation Balance",
    "subtitle": "Comparison of Average Salary and Superannuation Balance across Australian States",
    "fontSize": 18,
    "subtitleFontSize": 14,
    "anchor": "middle",
    "color": "#333333",
    "subtitleColor": "#666666"
  },
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/shaheerrizwan786/3179/main/ts22datasummary.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "fold": [
        "Average of Average salary or wages",
        "Average of Average super total accounts balance"
      ],
      "as": ["Metric", "Value"]
    },
    {
      "calculate": "datum.State == 'New South Wales' ? 'NSW' : datum.State == 'Victoria' ? 'VIC' : datum.State == 'Queensland' ? 'QLD' : datum.State == 'South Australia' ? 'SA' : datum.State == 'Western Australia' ? 'WA' : datum.State == 'Tasmania' ? 'TAS' : datum.State == 'Northern Territory' ? 'NT' : datum.State == 'Australia Capital Territory' ? 'ACT' : datum.State",
      "as": "StateAcronym"
    },
    {"filter": "datum.State != 'Grand Total' && datum.State != 'Unknown'"},
    {
      "calculate": "datum.Metric == 'Average of Average salary or wages' ? 'Average Salary' : 'Average Super Balance'",
      "as": "MetricLabel"
    },
    {
      "calculate": "datum['Average of Average super total accounts balance'] - datum['Average of Average salary or wages']",
      "as": "Difference"
    }
  ],
  "layer": [
    {
      "mark": {"type": "line", "interpolate": "monotone", "color": "#cccccc"},
      "encoding": {
        "x": {"field": "StateAcronym", "type": "nominal"},
        "y": {"field": "Value", "type": "quantitative"},
        "detail": {"field": "StateAcronym"},
        "order": {"field": "MetricLabel"}
      }
    },
    {
      "mark": {"type": "point", "filled": true, "size": 100, "opacity": 0.8},
      "encoding": {
        "x": {
          "field": "StateAcronym",
          "type": "nominal",
          "title": "State",
          "axis": {"labelAngle": 0, "labelFontSize": 12, "titleFontSize": 14}
        },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "title": "Average Amount (AUD)",
          "scale": {"zero": false}
        },
        "color": {
          "field": "MetricLabel",
          "type": "nominal",
          "scale": {
            "domain": ["Average Salary", "Average Super Balance"],
            "range": ["#5B84B1FF", "#FC766AFF"]
          },
          "title": "Metric",
          "legend": {
            "orient": "top-right",
            "labelFontSize": 12,
            "titleFontSize": 14
          }
        },
        "tooltip": [
          {"field": "StateAcronym", "title": "State"},
          {"field": "MetricLabel", "title": "Metric"},
          {"field": "Value", "title": "Amount", "format": "$,.2f"},
          {
            "field": "Difference",
            "title": "Difference (Super - Salary)",
            "format": "$,.2f"
          }
        ]
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14,
      "titleFontWeight": "bold",
      "titleColor": "#333333"
    },
    "legend": {"labelFontSize": 14, "titleFontSize": 16, "symbolSize": 150}
  }
}