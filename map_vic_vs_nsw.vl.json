{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Wealth Distribution Across Australian States",
  "width": 800,
  "height": 500,
  "projection": {
    "type": "mercator",
    "center": [135, -28.05975],
    "scale": 650,
    "clipExtent": [[0, 0], [800, 500]]
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/shaheerrizwan786/3179/refs/heads/main/STE_2021_AUST_GDA2020.json",
        "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA2020"}
      },
      "transform": [
        {
          "lookup": "properties.STE_NAME21",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/shaheerrizwan786/3179/refs/heads/main/ts22datasummary.csv",
              "format": {"type": "csv"}
            },
            "key": "State",
            "fields": [
              "Average of Average taxable income or loss",
              "Average of Average salary or wages",
              "Average of Average net tax"
            ]
          }
        },
        {"filter": "datum['Average of Average taxable income or loss'] != null"}
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Average of Average taxable income or loss",
          "type": "quantitative",
          "scale": {"scheme": "purples"},
          "title": "Avg Taxable Income"
        },
        "tooltip": [
          {
            "field": "properties.STE_NAME21",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "Average of Average taxable income or loss",
            "type": "quantitative",
            "title": "Average Taxable Income"
          },
          {
            "field": "Average of Average salary or wages",
            "type": "quantitative",
            "title": "Average Salary"
          },
          {
            "field": "Average of Average net tax",
            "type": "quantitative",
            "title": "Average Net Tax"
          }
        ]
      }
    }
  ],
  "config": {}
}