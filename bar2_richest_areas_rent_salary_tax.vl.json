{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/shaheerrizwan786/3179/refs/heads/main/ts22datacleaned.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"filter": "datum['Average taxable income or loss'] > 200000"},
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [
        {"field": "Average taxable income or loss", "order": "descending"}
      ]
    },
    {"filter": "datum.rank <= 8"},
    {
      "calculate": "datum['Average taxable income or loss'] / 1000",
      "as": "Income (K)"
    },
    {"calculate": "datum['Average net tax'] / 1000", "as": "Net Tax (K)"},
    {"calculate": "datum['Average net rent'] / 1000", "as": "Net Rent (K)"}
  ],
  "encoding": {
    "theta": {"field": "Postcode", "type": "nominal", "stack": true}
  },
  "layer": [
    {
      "mark": {
        "type": "arc",
        "innerRadius": 80,
        "stroke": "white",
        "strokeWidth": 1.5
      },
      "encoding": {
        "radius": {
          "field": "Income (K)",
          "type": "quantitative",
          "scale": {"type": "sqrt", "rangeMin": 100, "rangeMax": 180},
          "axis": {"title": "Avg Taxable Income (K)"}
        },
        "color": {"value": "#4CAF50"},
        "tooltip": [
          {"field": "Postcode", "title": "Postcode"},
          {"field": "State", "title": "State"},
          {
            "field": "Income (K)",
            "title": "Avg Taxable Income (K)",
            "format": "$,.2f"
          },
          {
            "field": "Net Tax (K)",
            "title": "Avg Net Tax (K)",
            "format": "$,.2f"
          },
          {
            "field": "Net Rent (K)",
            "title": "Avg Net Rent (K)",
            "format": "$,.2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "arc",
        "innerRadius": 130,
        "stroke": "white",
        "strokeWidth": 1.5
      },
      "encoding": {
        "radius": {
          "field": "Net Tax (K)",
          "type": "quantitative",
          "scale": {"type": "sqrt", "rangeMin": 110, "rangeMax": 200},
          "axis": {"title": "Avg Net Tax (K)"}
        },
        "color": {"value": "#FF5722"},
        "tooltip": [
          {"field": "Postcode", "title": "Postcode"},
          {"field": "State", "title": "State"},
          {
            "field": "Net Tax (K)",
            "title": "Avg Net Tax (K)",
            "format": "$,.2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "arc",
        "innerRadius": 180,
        "stroke": "white",
        "strokeWidth": 1.5
      },
      "encoding": {
        "radius": {
          "field": "Net Rent (K)",
          "type": "quantitative",
          "scale": {"type": "sqrt", "rangeMin": 130, "rangeMax": 220},
          "axis": {"title": "Avg Net Rent (K)"}
        },
        "color": {"value": "#FFEB3B"},
        "tooltip": [
          {"field": "Postcode", "title": "Postcode"},
          {"field": "State", "title": "State"},
          {
            "field": "Net Rent (K)",
            "title": "Avg Net Rent (K)",
            "format": "$,.2f"
          }
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"},
    "legend": {
      "title": "Metrics",
      "titleFontSize": 12,
      "labelFontSize": 10,
      "orient": "bottom",
      "symbolType": "circle",
      "symbolSize": 100
    }
  },
  "title": {
    "text": "Top 8 Postcodes by Avg Taxable Income: Income, Net Tax, and Net Rent",
    "fontSize": 16,
    "anchor": "middle"
  }
}